@using Logic
<MudSelect Dense="true"
           T="IPokedexType"
           Label="@Label"
           AnchorOrigin="Origin.BottomCenter"
           @bind-Value="@SelectedPokedexType">
    @foreach (var pokedexType in pokedexTypes)
    {
        <MudSelectItem Value="@pokedexType" />
    }
</MudSelect>

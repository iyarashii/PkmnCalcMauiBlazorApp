@page "/pokedex"
@using System.Net;
<h3>@PageTitle</h3>
<MudTextField @bind-Value="PokemonName" Label="Pokemon" Variant="Variant.Text"></MudTextField>
<MudButton Variant="Variant.Filled" OnClick="GetPageTitle" >Get page title</MudButton>
<MudPaper Height="1080px">
    <iframe id="serebiiPokedex" src="@(PokedexSource + PokemonName)" />
</MudPaper>
@code {
    public string PageTitle { get; set; }
    public string PokedexSource { get; set; } = "https://www.serebii.net/pokedex-sv/";
    public string PokemonName { get; set; }
    public async void GetPageTitle()
    {
        using (HttpClient client = new HttpClient())
        {
            string downloadString = await client.GetStringAsync(PokedexSource + PokemonName);
            string titleTag = "<title>";
            string titleEndTag = "</title>";
            PageTitle = "Title: " + GetBetween(downloadString, titleTag, titleEndTag);
        }
        StateHasChanged();
    }

    public static string GetBetween(string strSource, string strStart, string strEnd)
    {
        if (strSource.Contains(strStart) && strSource.Contains(strEnd))
        {
            int start, end;
            start = strSource.IndexOf(strStart, 0) + strStart.Length;
            end = strSource.IndexOf(strEnd, start);
            return strSource.Substring(start, end - start);
        }

        return "";
    }
}


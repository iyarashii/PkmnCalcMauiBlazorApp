@using System;
@using System.Threading;

@implements IDisposable

<MudProgressCircular Color="Color.Primary" Value="@Value"  />

@code {
    private double _value;
    [Parameter]
    public double Value 
    {
        get => _value; 
        set 
        { 
            if (_value == value) return;
            _value = value;
            if (_disposed)
            {
                return;
            }
            StateHasChanged();
        }
    }
    bool _disposed;
    public void Dispose() => _disposed = true;

}

